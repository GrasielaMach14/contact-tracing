<aura:component implements="force:appHostable">
    <!-- Este atributo irá armazenar os valores dos ids -->
    <aura:attribute name="scope" type="String" default="person" />
    <aura:attribute name="title" type="String" default="Person View" />

    <div class="container">
        <lightning:layout multipleRows="true">
            <lightning:layoutItem size="12">
                <!-- Chame aqui o componente filho para a mudança do título -->
                <c:CTHealthHeader title="{!v.title}" scope="{!v.scope}" aura:id="health-header" />
            </lightning:layoutItem>
            <lightning:layoutItem size="12">
                <!-- Aciona o evento para mudar o titulo ao ter a tab selecionada e as contagens dos status em CTHealthHeader-->
                <lightning:tabset onselect="{! c.handleSelect }" variant="vertical">
                    <lightning:tab label="Person View" id="person">
                        <lightning:layout>
                            <lightning:layoutItem size="8" padding="horizontal-small">
                                <c:CTRencentChanges scope="person" />
                            </lightning:layoutItem>
                            <lightning:layoutItem size="4" padding="horizontal-small">
                                <c:PersonView />
                            </lightning:layoutItem>
                        </lightning:layout>
                    </lightning:tab>
                    <lightning:tab label="Location View" id="location">
                        <!-- Adicione os componentes filhos dentro de layout para acionar os eventos -->
                        <lightning:layout>
                            <lightning:layoutItem size="8" padding="horizontal-small">
                                <c:CTRencentChanges scope="location" />
                            </lightning:layoutItem>
                            <lightning:layoutItem size="4" padding="horizontal-small">
                                <c:CTLocationView />
                            </lightning:layoutItem>
                        </lightning:layout>
                    </lightning:tab>
                </lightning:tabset>
            </lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>