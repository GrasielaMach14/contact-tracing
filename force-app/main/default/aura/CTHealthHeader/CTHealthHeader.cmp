<aura:component controller="CTHealthHeaderController">
    <!-- Este atributo irá armazenar os valores dos ids -->
    <aura:attribute name="scope" type="String" default="person" />
    <aura:attribute name="title" type="String" default="Person View" />
    <!-- Use esta variável para definir a contagem dos status no title = Green or Yellow ... -->
    <aura:attribute name="count" type="Object" default="" />
    <!-- Defina um método controlador para disparar um evento  -->
    <aura:handler name="init" value="{!this}" action="{!c.getCountStatus}" />
    <!-- Defina um método aura para tratar o evento da mudança do título no método pai HealthAdmin -->
    <aura:method name="fetchCount" action="{!c.fetchCount}"
        description="Fetch Count for person view or location view" />

    <div class="slds-page-header slds-page-header_record-home">
        <div class="slds-page-header__row">
            <div class="slds-page-header__col-title">
                <div class="slds-media">
                    <div class="slds-media__figure">
                        <span class="slds-icon_container slds-icon-standard-opportunity">
                            <lightning:icon iconName="standard:queue" alternativeText="Contact Tracing"
                                title="Contact Tracing">
                            </lightning:icon>
                        </span>
                    </div>
                    <div class="slds-media__body">
                        <div class="slds-page-header__name">
                            <div class="slds-page-header__name-title">
                                <h1>
                                    <span>Contact Tracing</span>
                                    <span class="slds-page-header__title slds-truncate"
                                        title="{!v.title}">{!v.title}</span>
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="slds-page-header__col-actions">
                <div class="slds-page-header__controls">
                    <div class="slds-page-header__control">
                        <ul class="slds-button-group-list">
                            <li>
                                <!-- Acione um evento ao botão para criar o modal de Criação de Records -->
                                <button class="slds-button slds-button_neutral" onclick="{!c.createRecord}">Add
                                    New</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="slds-page-header__row slds-page-header__row_gutters">
            <div class="slds-page-header__col-details">
                <ul class="slds-page-header__detail-row">
                    <li class="slds-page-header__detail-block">
                        <div class="header-item colour1" title="Green">Green</div>
                        <div class="header-item colour1" title="0">
                            {!v.count.Green}</div>
                    </li>
                    <li class="slds-page-header__detail-block">
                        <div class="header-item colour2" title="Yellow">Yellow</div>
                        <div class="header-item colour2" title="0">
                            {!v.count.Yellow}</div>
                    </li>
                    <li class="slds-page-header__detail-block">
                        <div class="header-item colour3" title="Orange">Orange</div>
                        <div class="header-item colour3" title="0">
                            {!v.count.Orange}</div>
                    </li>
                    <li class="slds-page-header__detail-block">
                        <div class="header-item colour4" title="Red">Red</div>
                        <div class="header-item colour4" title="0">
                            {!v.count.Red}</div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</aura:component>