<aura:component controller="CTPersonHealthStatusUpdate">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="status" type="String" />
    <aura:attribute name="fields" type="String[]"
        default="['Name','Health_Status__c','Mobile__c','Status_Update_Date__c','Token__c']" />

    <aura:handler event="c:CTPersonSelectEvent" action="{!c.personSelectHandler}" />

    <aura:if isTrue="{! !empty(v.recordId)}">
        <div class="{!v.status + ' person-card'}">
            <lightning:layout multipleRows="true">
                <lightning:layoutItem size="12" padding="around-small">
                    <lightning:recordForm recordId="{!v.recordId}" objectApiName="Person__c" fields="{!v.fields}"
                        columns="1" mode="readonly" />
                </lightning:layoutItem>
                <aura:if isTrue="{!v.status != 'Red'}">
                    <lightning:layoutItem size="12" padding="around-small">
                        <div class="slds-clearfix">
                            <div class="slds-float_right">
                                <lightning:button variant="destructive" label="Status Red" title="Destructive action"
                                    onclick="{! c.changeToRedStatus }" />
                            </div>
                        </div>
                    </lightning:layoutItem>
                </aura:if>
            </lightning:layout>
        </div>
    </aura:if>
</aura:component>